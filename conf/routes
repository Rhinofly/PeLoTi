# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /requestToken               controllers.Portal.requestToken
POST    /receiveToken               controllers.Portal.requestTokenHandler

GET     /getByLocation              controllers.Application.byLocation(latitude: Option[Double], longitude: Option[Double])
POST    /save                       controllers.Application.save
GET     /getById                    controllers.Application.byId(id: Option[String])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
