# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /requestToken               controllers.Portal.requestToken
POST    /receiveToken               controllers.Portal.requestTokenHandler

GET     /getByLocation              controllers.Application.byLocation(longitude: Option[Double], latitude: Option[Double])
POST    /save                       controllers.Application.save
GET     /getById                    controllers.Application.byId(id: Option[String])
GET     /getByTime                  controllers.Application.getByTime(time: Option[Long])
GET     /getByLocationAndTime       controllers.Application.getByLocationAndTime(longitude: Option[Double], latitude: Option[Double], time: Option[Long])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
