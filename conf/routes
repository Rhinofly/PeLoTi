# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Portal
GET     /requestToken               controllers.Portal.requestToken
POST    /receiveToken               controllers.Portal.requestTokenHandler
POST    /token                      controllers.Portal.getToken

# Service
GET     /getByLocation              controllers.Application.byLocation(longitude: Double, latitude: Double, radius: Long ?= 10)
POST    /save                       controllers.Application.save
GET     /getById                    controllers.Application.byId(id: String)
GET     /getByTime                  controllers.Application.getByTime(start: Long, end: Option[Long])
GET     /getByLocationAndTime       controllers.Application.getByLocationAndTime(longitude: Double, latitude: Double, start: Long, end: Option[Long])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
